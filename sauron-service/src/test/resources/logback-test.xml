<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">
    <property name="mytPattern"
              value="%date{ISO8601} | %-16thread | %-5level{5} | [%X{sauron.serviceName:-unknown-service}] [%X{sauron.pluginId:-no-plugin}] | %-150message | %-35(%logger{0}:%-5L)%n%exception{full}"/>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern><![CDATA[${mytPattern}}]]></pattern>
        </encoder>
    </appender>

    <root level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
